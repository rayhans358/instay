{
  "version":2,
  "buildCommand": "cd client; npm install; npx vite build",
  "outputDirectory": "client/dist",
  "builds": [
    { "src": "index.js.js", 
      "use": "@vercel/vite" 
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {"source": "/(.*)", "destination": "/"}
  ]
}